[Unit]
Description=gunicorn daemon
Requires=gunicorn-<%= @superset['name'] %>.socket
After=network.target

[Service]
Type=notify
User=<%= @owner %>
Group=<%= @group %>
RuntimeDirectory=gunicorn
WorkingDirectory=<%= @superset['base_dir'] %>
EnvironmentFile=/etc/conf.d/gunicorn-<%= @superset['name'] %>
ExecStart=<%= @superset['base_dir'] %>/venv/bin/gunicorn -w 10 \
                                  -k gevent \
                                  --timeout 60 \
                                  -b  127.0.0.1:<%= @superset['port'] %> \
                                  --limit-request-line 0 \
                                  --limit-request-field_size 0 \
                                  "superset.app:create_app()"
ExecReload=/bin/kill -s HUP \$MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true

[Install]
WantedBy=multi-user.target
